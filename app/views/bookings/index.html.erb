<div class="bookings-container">
  <h1>My bookings</h1>

  <div class="booking-cards">
    <% @bookings.each do |b| %>
      <div class="booking-card">
        <h2><strong><%= b.slot.activity.name %></strong></h2>
        <p><%= b.slot.activity.venue.address %></p>
        <p>The booking is for <%= b.user_party_size %> people </p>
        <p>The booking is on <%= b.activity_date.strftime("%e %B") %> from <%= b.slot.start_time.strftime("%H:%M") %> to <%= b.slot.end_time.strftime("%H:%M") %></p>
        <div class="cancel-button">
          <%= link_to "See Activity", activity_path(b.slot.activity_id), class: "btn btn-outline-dark p-1" %>
          <%= link_to "See Venue", venue_path(b.slot.activity.venue_id), class: "btn btn-outline-dark p-1" %>
          <%= link_to "Cancel", b, class: "btn btn-outline-dark p-1", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }%>
        </div>
      </div>
    <% end %>
  </div>
</div>
