<%= render "shared/search" %>

<div class="hero">
  <div class="hero-text">
    <% if user_signed_in? %>
      <h1 class="banner-slogan">Hello <%= current_user.first_name %>!</h1>
    <% else %>
      <h1 class="banner-slogan">Out N' About</h1>
    <% end %>
    <p>Discover what the world has to offer</p>
      <%# <%= link_to "Explore", all_activities_path, class: "btn btn-light"%>
  </div>
</div>
<div class="home-boxes">
  <div class="venue-box">
    <%= link_to all_activities_path do %>
      <i class="bi bi-people"></i>
    <% end %>
    <p class="box-text">Activities</p>
  </div>
  <div class="venue-box">
    <%= link_to venues_path do %>
      <i class="bi bi-pin-map"></i>
    <% end %>
    <p class="box-text">Venues</p>
  </div>
</div>
<div class="container home-cards-container">
  <div class="scrollmenu">
    <% @venues.each do |venue| %>
      <div class="card-trip-home">
        <% if venue.activities.first.photo.attached? %>
        <%= cl_image_tag venue.activities.first.photo.key %>
        <% else %>
        <%= 'https://m.media-amazon.com/images/S/aplus-media/vc/cab6b08a-dd8f-4534-b845-e33489e91240._CR75,0,300,300_PT0_SX300__.jpg'%>
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2><%= venue.activities.first.name %></h2>
            <p><%= venue.activities.first.description %></p>
          </div>
          <h2 class="card-trip-pricing">Â£99.99</h2>
        </div>
      </div>
    <% end %>
  </div>
</div>
