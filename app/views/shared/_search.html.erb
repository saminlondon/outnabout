<div class="search">
  <%= form_with url: activities_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find an venue or activity"%>
      <%= submit_tag "Search", class: "btn btn-light", style:"display:none;" %>
    <% end %>
</div>
