
  <h1>Activities Near You</h1>
  <ul>

  <% @activities.each do |a| %>
    <div class="card mb-3">
     <%= image_tag("https://www.qmsu.org/asset/Organisation/8415/QMSU-1.jpeg", height: "40px", width: "200px") %>
        <p><%= link_to a.name, activity_path(a) %></p>
        <p><%= a.venue.name %> <br><%= a.venue.address %></p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
  <% end %>

</div>
