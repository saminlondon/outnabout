<div class="form mt-4" style="width:90vw;margin:0 auto;">
    <h1><strong>New Activity</strong></h1>
  <div class="container">
    <div style="color:#362d77">
      <%= simple_form_for (@activity), html: { class: "form-new-activity" } do |f| %>
        <%= f.input :venue, :as => :hidden, :input_html => { :value => @venue.id } %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :operational_start_time %>
        <%= f.input :operational_end_time %>
        <%= f.input :photo, as: :file %>
        <%= f.input :price %>
        <%= f.input :activity_party_size %>
        <%= f.input :category %>
        <%= f.button :submit, 'Create', class:"btn btn-primary"  %>
      <% end %>
    </div>
    <br>
    <%= link_to "Back", activities_path(@activity), class: "btn btn-outline-dark"%>
  </div>
</div>
